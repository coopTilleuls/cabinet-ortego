{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "tilleuls-ortego-blocks/banner-colored",
	"version": "0.1.0",
	"title": "Section Bandeau Icones",
	"category": "widgets",
	"icon": "flag",
	"description": "Une section colorée avec une liste répétable d'icônes et de textes.",
	"supports": {
		"html": false,
		"align": ["wide", "full"],
		"innerBlocks": true
	},
	"textdomain": "tilleuls",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"render": "file:./render.php",
	"viewScript": "file:./view.js",
	"attributes": {
		"color": {
			"type": "string",
			"default": "black"
		},
		"items": {
			"type": "array",
			"default": [],
			"items": {
				"type": "object",
				"default": {
					"icon": "fa-solid fa-gavel",
					"text": ""
				}
			}
		}
	}
}
