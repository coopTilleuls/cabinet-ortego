{
  "$schema": "https://schemas.wp.org/wp/6.8/theme.json",
  "version": 3,
  "customTemplates": [
    {
      "name": "page-no-title",
      "title": "Page sans titre",
      "postTypes": [
        "page"
      ]
    }
  ],
  "settings": {
    "custom": {
      "container": {
        "width": "100%",
        "maxWidth": "1100px",
        "margin": "0 auto",
        "padding": "0",
        "boxSizing": "border-box"
      }
    },
    "appearanceTools": true,
    "color": {
      "defaultPalette": false,
      "defaultGradients": false,
      "defaultDuotone": false,
      "palette": [
        {
          "slug": "primary",
          "name": "Blanc",
          "color": "#ffffff"
        },
        {
          "slug": "accent",
          "name": "Rouge Basque",
          "color": "#8C1818"
        },
        {
          "slug": "accent-dark",
          "name": "Rouge Foncé",
          "color": "#661010"
        },
        {
          "slug": "secondary",
          "name": "Noir doux",
          "color": "#1a1a1a"
        },
        {
          "slug": "tertiary",
          "name": "Beige papier",
          "color": "#f4f1ea"
        },
        {
          "slug": "text-main",
          "name": "Texte principal",
          "color": "#2c2c2c"
        },
        {
          "slug": "text-light",
          "name": "Texte clair",
          "color": "#555555"
        },
        {
          "slug": "text-muted",
          "name": "Texte clair",
          "color": "#666666"
        },
        {
          "slug": "border-light",
          "name": "Texte clair",
          "color": "#eee"
        },
        {
          "slug": "bg-light",
          "name": "Texte clair",
          "color": "#f9f9f9"
        }
      ]
    },
    "layout": {
      "contentSize": "1200px",
      "wideSize": "1340px"
    },
    "spacing": {
      "defaultSpacingSizes": false,
      "spacingSizes": [
        {
          "slug": "20",
          "name": "Minuscule",
          "size": "10px"
        },
        {
          "slug": "30",
          "name": "Très petit",
          "size": "20px"
        },
        {
          "slug": "40",
          "name": "Petit",
          "size": "30px"
        },
        {
          "slug": "50",
          "name": "Normal",
          "size": "clamp(30px, 5vw, 50px)"
        },
        {
          "slug": "60",
          "name": "Grand",
          "size": "clamp(30px, 7vw, 70px)"
        },
        {
          "slug": "70",
          "name": "Très grand",
          "size": "clamp(50px, 7vw, 90px)"
        },
        {
          "slug": "80",
          "name": "Énorme",
          "size": "clamp(70px, 10vw, 140px)"
        }
      ],
      "units": [
        "%",
        "px",
        "em",
        "rem",
        "vh",
        "vw"
      ]
    },
    "typography": {
      "fluid": true,
      "defaultFontSizes": false,
      "fontFamilies": [
        {
          "slug": "body",
          "name": "Montserrat",
          "fontFamily": "\"Montserrat\", sans-serif",
          "fontFace": [
            {
              "fontFamily": "Montserrat",
              "fontWeight": "300 800",
              "fontStyle": "normal",
              "src": [
                "file:./assets/fonts/montserrat/Montserrat-VariableFont_wght.woff2"
              ]
            }
          ]
        },
        {
          "slug": "heading",
          "name": "Merriweather",
          "fontFamily": "\"Merriweather\", serif",
          "fontFace": [
            {
              "fontFamily": "Merriweather",
              "fontWeight": "300 700",
              "fontStyle": "normal",
              "src": [
                "file:./assets/fonts/merriweather/Merriweather-Regular.woff2"
              ]
            },
            {
              "fontFamily": "Merriweather",
              "fontWeight": "300 700",
              "fontStyle": "italic",
              "src": [
                "file:./assets/fonts/merriweather/Merriweather-Italic.woff2"
              ]
            }
          ]
        }
      ],
      "fontSizes": [
        {
          "slug": "small",
          "name": "Petite",
          "size": "0.875rem"
        },
        {
          "slug": "medium",
          "name": "Moyenne",
          "size": "1rem",
          "fluid": {
            "min": "1rem",
            "max": "1.125rem"
          }
        },
        {
          "slug": "large",
          "name": "Grande",
          "size": "1.38rem",
          "fluid": {
            "min": "1.125rem",
            "max": "1.375rem"
          }
        },
        {
          "slug": "x-large",
          "name": "Très grande",
          "size": "1.75rem",
          "fluid": {
            "min": "1.75rem",
            "max": "2rem"
          }
        },
        {
          "slug": "xx-large",
          "name": "Très très grande",
          "size": "2.15rem",
          "fluid": {
            "min": "2.15rem",
            "max": "3rem"
          }
        }
      ]
    },
    "useRootPaddingAwareAlignments": true
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--primary)",
      "text": "var(--wp--preset--color--text-main)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--body)",
      "fontSize": "var(--wp--preset--font-size--large)",
      "fontWeight": "300",
      "lineHeight": "1.4"
    },
    "elements": {
      "heading": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--heading)",
          "fontWeight": "400",
          "lineHeight": "1.15"
        }
      },
      "link": {
        "color": {
          "text": "var(--wp--preset--color--accent)"
        },
        ":hover": {
          "color": {
            "text": "var(--wp--preset--color--accent-dark)"
          },
          "typography": {
            "textDecoration": "none"
          }
        }
      },
      "button": {
        "color": {
          "background": "var(--wp--preset--color--accent)",
          "text": "var(--wp--preset--color--primary)"
        },
        ":hover": {
          "color": {
            "background": "var(--wp--preset--color--accent-dark)",
            "text": "var(--wp--preset--color--primary)"
          }
        }
      }
    }
  },
  "templateParts": [
    {
      "name": "header",
      "title": "En-tête",
      "area": "header"
    },
    {
      "name": "footer",
      "title": "Pied de page",
      "area": "footer"
    }
  ]
}
