{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,
  "settings": {
    "appearanceTools": true,
    "layout": {
      "contentSize": "1100px",
      "wideSize": "1340px"
    },
    "color": {
      "defaultPalette": false,
      "palette": [
        {
          "color": "#8C1818",
          "name": "Rouge Basque (Primaire)",
          "slug": "primary"
        },
        {
          "color": "#661010",
          "name": "Rouge Foncé (Survol)",
          "slug": "primary-dark"
        },
        {
          "color": "#1a1a1a",
          "name": "Noir Doux (Secondaire)",
          "slug": "secondary"
        },
        {
          "color": "#f4f1ea",
          "name": "Beige Papier (Fond)",
          "slug": "tertiary"
        },
        {
          "color": "#ffffff",
          "name": "Blanc",
          "slug": "white"
        },
        {
          "color": "#2c2c2c",
          "name": "Texte Sombre",
          "slug": "text-main"
        },
        {
          "color": "#555555",
          "name": "Texte Gris",
          "slug": "text-light"
        }
      ]
    },
    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "\"Montserrat\", sans-serif",
          "name": "Montserrat",
          "slug": "body",
          "fontFace": [
            {
              "fontFamily": "Montserrat",
              "fontWeight": "300 800",
              "fontStyle": "normal",
              "src": [ "file:./assets/fonts/montserrat/Montserrat-VariableFont_wght.woff2" ]
            }
          ]
        },
        {
          "fontFamily": "\"Merriweather\", serif",
          "name": "Merriweather",
          "slug": "heading",
          "fontFace": [
            {
              "fontFamily": "Merriweather",
              "fontWeight": "300 700",
              "fontStyle": "normal",
              "src": [ "file:./assets/fonts/merriweather/Merriweather-Regular.woff2" ]
            },
            {
              "fontFamily": "Merriweather",
              "fontWeight": "300 700",
              "fontStyle": "italic",
              "src": [ "file:./assets/fonts/merriweather/Merriweather-Italic.woff2" ]
            }
          ]
        }
      ],
      "fontSizes": [
        {
          "size": "0.85rem",
          "slug": "small"
        },
        {
          "size": "1rem",
          "slug": "medium"
        },
        {
          "size": "1.25rem",
          "slug": "large"
        },
        {
          "size": "2.2rem",
          "slug": "x-large"
        },
        {
          "size": "3rem",
          "slug": "xx-large"
        }
      ]
    },
    "spacing": {
      "spacingSizes": [
        { "name": "Petit", "size": "25px", "slug": "25" },
        { "name": "Moyen", "size": "50px", "slug": "50" },
        { "name": "Grand", "size": "80px", "slug": "80" }
      ]
    }
  },
  "styles": {
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--body)",
      "fontSize": "var(--wp--preset--font-size--medium)",
      "lineHeight": "1.7"
    },
    "color": {
      "background": "var(--wp--preset--color--white)",
      "text": "var(--wp--preset--color--text-main)"
    },
    "elements": {
      "h1": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--heading)",
          "fontWeight": "300",
          "lineHeight": "1.3"
        },
        "color": {
          "text": "var(--wp--preset--color--secondary)"
        }
      },
      "h2": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--heading)",
          "fontSize": "var(--wp--preset--font-size--x-large)",
          "lineHeight": "1.3"
        },
        "color": {
          "text": "var(--wp--preset--color--secondary)"
        }
      },
      "h3": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--heading)",
          "fontSize": "var(--wp--preset--font-size--large)",
          "fontWeight": "700"
        },
        "color": {
          "text": "var(--wp--preset--color--secondary)"
        }
      },
      "link": {
        "color": {
          "text": "var(--wp--preset--color--text-main)"
        },
        ":hover": {
          "color": {
            "text": "var(--wp--preset--color--primary)"
          },
          "typography": {
            "textDecoration": "none"
          }
        }
      },
      "button": {
        "color": {
          "background": "var(--wp--preset--color--primary)",
          "text": "var(--wp--preset--color--white)"
        },
        "border": {
          "radius": "2px",
          "color": "var(--wp--preset--color--primary)"
        },
        "typography": {
          "textTransform": "uppercase",
          "letterSpacing": "1px",
          "fontWeight": "500",
          "fontSize": "0.85rem"
        },
        "spacing": {
          "padding": {
            "top": "12px",
            "bottom": "12px",
            "left": "30px",
            "right": "30px"
          }
        },
        ":hover": {
          "color": {
            "background": "var(--wp--preset--color--primary-dark)"
          },
          "border": {
            "color": "var(--wp--preset--color--primary-dark)"
          }
        }
      }
    },
    "blocks": {
      "core/site-title": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--heading)",
          "textTransform": "uppercase",
          "fontWeight": "700",
          "letterSpacing": "0.5px"
        },
        "color": {
          "text": "var(--wp--preset--color--secondary)"
        }
      },
      "core/separator": {
        "color": {
          "text": "var(--wp--preset--color--primary)"
        },
        "css": "height: 4px !important; opacity: 1;"
      },
      "core/navigation": {
        "typography": {
          "textTransform": "uppercase",
          "fontWeight": "500",
          "fontSize": "0.9rem"
        }
      }
    }
  },
  "templateParts": [
    {
      "area": "header",
      "name": "header",
      "title": "En-tête"
    },
    {
      "area": "footer",
      "name": "footer",
      "title": "Pied de page"
    }
  ]
}
